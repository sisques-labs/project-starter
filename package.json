{
  "name": "saas-boilerplate",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,css,scss,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,css,scss,mdx}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "overrides": {
      "@astrojs/starlight>zod": "3.25.76",
      "astro>zod": "3.25.76"
    }
  },
  "engines": {
    "node": ">=18"
  }
}
